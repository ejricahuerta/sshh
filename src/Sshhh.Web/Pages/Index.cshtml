@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <section class="text-center h-100">
        <header class="m-2">
            <h3 class="font-weight-bold">Channel Sshhh - EXD</h3>
            <p>This is only for <strong>WOSHU GAMERS</strong><br /> Enter current channel(required for muting users), and afk channel</p>
        </header>
        <form method="post" asp-page="Index">
            <div class="form-row">
                <div class="form-group col-md-12">
                    <a href="https://support.discord.com/hc/en-us/articles/206346498-Where-can-I-find-my-User-Server-Message-ID-">
                        <small>
                            how to find server id
                        </small>
                    </a>
                    <input type="text" class="form-control" placeholder="Server Id" asp-for="@Model.Input.ServerId">
                </div>
                <div class="form-group col-md-6">
                    <input type="text" class="form-control" placeholder="From Channel" asp-for="@Model.Input.From">
                </div>
                <div class="form-group col-md-6">
                    <input type="text" class="form-control" placeholder="To Channel" asp-for="@Model.Input.To">
                </div>

                <input type="hidden" class="form-control" id="mute_hidden" asp-for="@Model.Input.Mute" value="True">
            </div>
            <div class="form-group">
                <div class="d-flex">
                    <button type="submit" asp-page-handler="Move" class="btn btn-lg btn-danger w-50 mb-2 mr-1">
                        Move
                    </button>
                    <button type="submit" class="btn btn-danger mb-2  w-50 ml-1" asp-page-handler="MoveSwap">
                        <i class="fas fa-exchange-alt"></i>
                    </button>
                </div>
                <div class="d-flex">
                    <button type="submit" asp-page-handler="MuteUsers" class="btn-toggle-mute btn btn-lg btn-danger w-50 mb-2 mr-1">Mute</button>
                    <button type="submit" asp-page-handler="UnMuteUsers" class="btn-toggle-mute btn btn-lg btn-danger w-50 mb-2 ml-1">UnMute</button>
                </div>
            </div>
        </form>
    </section>
</div>
